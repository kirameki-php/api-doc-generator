{
  "name": "kirameki/api-doc-tools",
  "description": "Kirameki API Documentation Tools",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.4",
    "kirameki/utils": "dev-main",
    "latte/latte": "^3.0",
    "league/commonmark": "^2.7"
  },
  "require-dev": {
    "phpstan/phpstan": "^2",
    "phpunit/phpunit": "^12"
  },
  "autoload": {
    "psr-4": {
      "Kirameki\\ApiDocTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\App\\": "tests/app/"
    }
  },
  "config": {
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/phpunit --coverage-html=coverage",
    "ci-test": "vendor/bin/phpunit --coverage-clover ./coverage.xml",
    "analyze": "vendor/bin/phpstan analyse --memory-limit 1G"
  }
}
